<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sony.homeMain.settings.SettingsActivity">

    <Switch
        android:id="@+id/enableDisableLogin"
        android:layout_width="58dp"
        android:layout_height="35dp"
        android:layout_marginRight="162dp"
        android:layout_marginTop="32dp"
        android:onClick="onSwitchClicked"
        android:textOff="Off"
        android:textOn="On"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Off"
        tools:textOff="Off"
        tools:textOn="On"
        android:layout_marginEnd="162dp"
        tools:layout_editor_absoluteY="24dp"
        tools:layout_editor_absoluteX="191dp" />

    <Spinner
        android:id="@+id/changeCurrencyspinner"
        android:layout_width="155dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/button"
        android:layout_marginRight="67dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="67dp" />

    <TextView
        android:id="@+id/enablePinLabel"
        android:layout_width="89dp"
        android:layout_height="34dp"
        android:text="Enable PIN"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/enableDisableLogin"
        android:layout_marginRight="24dp"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <TextView
        android:id="@+id/changeCurrencyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Currency"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintRight_toLeftOf="@+id/changeCurrencyspinner"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.417"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:text="Change Passcode"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/enablePinLabel"
        app:layout_constraintRight_toLeftOf="@+id/button"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="134dp"
        android:layout_marginTop="15dp"
        android:onClick="changePIN"
        android:text="Change"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enableDisableLogin"
        android:layout_marginEnd="134dp" />

</android.support.constraint.ConstraintLayout>
